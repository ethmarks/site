---
const assetsURL = "https://site-ethmarks.vercel.app/common";

const headerHTML = await fetch(`${assetsURL}/header-home.wc.html`).then((r) =>
    r.text(),
);
const footerHTML = await fetch(`${assetsURL}/footer.wc.html`).then((r) =>
    r.text(),
);

const canonUrl = "https://site-ethmarks.vercel.app";
const title = "Ethan Marks";
const desc = "The landing page of ethmarks's personal website";
const img = "/ethmarks_site.webp";
const sourceURL = "https://github.com/ethmarks/site";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title}</title>
        <meta name="description" content={desc} />

        <link rel="canonical" href={canonUrl} />
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={desc} />
        <meta property="og:image" content={canonUrl + img} />
        <meta property="og:url" content={canonUrl} />
        <meta property="og:locale" content="en_US" />

        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={desc} />
        <meta name="twitter:image" content={canonUrl + img} />

        <link
            rel="preload"
            href={`${assetsURL}/Nunito-latin.woff2`}
            as="font"
            type="font/woff2"
            crossorigin
        />
        <link
            rel="preload"
            href={`${assetsURL}/Sen-latin.woff2`}
            as="font"
            type="font/woff2"
            crossorigin
        />

        <link
            rel="icon"
            href={`${assetsURL}/ethmarks.ico`}
            type="image/x-icon"
        />
        <link rel="stylesheet" href={`${assetsURL}/ethmarks.css`} />
        <script src={`${assetsURL}/ethmarks.wc.js`} is:inline defer></script>
    </head>
    <body>
        <eth-header active="home">
            <Fragment set:html={headerHTML} />
        </eth-header>
        <slot />
        <eth-footer source={sourceURL}>
            <Fragment set:html={footerHTML} />
        </eth-footer>
    </body>
</html>

<script>
    import { inject } from "@vercel/analytics";
    inject();
</script>
